Task 16 – indexOf() & lastIndexOf() let text = "programming"
•	Find first index of 'm'
•	Find last index of 'm'
//Ans: 
let text = "programming";

//  First index of 'm'
let firstIndex = text.indexOf('m');
console.log("First index of 'm':", firstIndex);

//  Last index of 'm'
let lastIndex = text.lastIndexOf('m');
console.log("Last index of 'm':", lastIndex);

Task 17 – replace() let tech = "I love python" Replace python with javascript
//Ans:
let tech = "I love python";

// Replace "python" with "javascript"
let updatedTech = tech.replace("python", "javascript");

console.log(updatedTech);

Task 18 – startsWith() & endsWith() let filename = "report.pdf"
•	Check if starts with "report"
•	Check if ends with ".pdf"
//Ans: 
let filename = "report.pdf";

// Check if starts with "report"
let starts = filename.startsWith("report");
console.log("Starts with 'report'?", starts);

// Check if ends with ".pdf"
let ends = filename.endsWith(".pdf");
console.log("Ends with '.pdf'?", ends);

Task 19 – repeat() let star = "*" Print 10 stars using repeat()

let star = "*";

// Print 10 stars
let stars = star.repeat(10);
console.log(stars);

FINAL TEAM CHALLENGE – Employee Report System
let employees = [  { name: "Naveen", salary: 50000 },
 { name: "Arun", salary: 30000 },
 { name: "Kiran", salary: 70000 }
]
Requirements:
•	Convert names to uppercase using map()
•	Filter salary > 40000
•	Find first salary > 60000
•	Calculate total salary using reduce()
•	Sort salaries descending

let employees = [  { name: "Naveen", salary: 50000 },
 { name: "Arun", salary: 30000 },
 { name: "Kiran", salary: 70000 }
]
// 1️⃣ Convert names to uppercase using map()
let upperCaseNames = employees.map(emp => ({
  ...emp, 
  name: emp.name.toUpperCase()
}));
console.log("Uppercase Names:", upperCaseNames);

// 2️⃣ Filter salary > 40000
let highSalary = employees.filter(emp => emp.salary > 40000);
console.log("Salary > 40000:", highSalary);

// 3️⃣ Find first salary > 60000
let firstHighSalary = employees.find(emp => emp.salary > 60000);
console.log("First salary > 60000:", firstHighSalary);

// 4️⃣ Calculate total salary using reduce()
let totalSalary = employees.reduce((acc, emp) => acc + emp.salary, 0);
console.log("Total Salary:", totalSalary);

// 5️⃣ Sort salaries descending
let sortedDescending = [...employees].sort((a, b) => b.salary - a.salary);
console.log("Salaries Descending:", sortedDescending);
